<Page x:Class="PatternMatchingTool.View.AutoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:PatternMatchingTool.View"
      xmlns:converters="clr-namespace:PatternMatchingTool.Converter"
      mc:Ignorable="d"
      Title="AutoPage">

    <Page.Resources>
        <converters:BitmapSourceConverter x:Key="BitmapSourceConvert" />
        <converters:BoolToBrushConverter x:Key="BoolToBrushConvert" />
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto" MinHeight="40"/>
            </Grid.RowDefinitions>
            <Viewbox Grid.Column="0"
                 Grid.Row="0"
                     Stretch="Uniform"
                     ClipToBounds="True"
                     MinWidth="618"
                     MinHeight="500" Grid.RowSpan="2">
                <Image Name="CameraImage"
                     MaxHeight="500"
                     Stretch="Uniform"
                     Source="{Binding DisplayBitmap, Converter={StaticResource BitmapSourceConvert}}"/>
            </Viewbox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" Grid.Row="1">
                <!-- Camera -->
                <StackPanel Orientation="Horizontal" Margin="10,0">
                    <Ellipse Width="20" Height="20"
                    Fill="{Binding IsCameraConnected, Converter={StaticResource BoolToBrushConvert}}"
                    Stroke="Black" StrokeThickness="1" Margin="0,0,5,0"/>
                    <TextBlock Text="Camera" VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>


                <!-- Server -->
                <StackPanel Orientation="Horizontal" Margin="20,0">
                    <Ellipse Width="20" Height="20"
                    Fill="{Binding IsServerConnected, Converter={StaticResource BoolToBrushConvert},Mode=TwoWay}"
                    Stroke="Black" StrokeThickness="1" Margin="0,0,5,0"/>
                    <TextBlock Text="Server" VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1" Margin="10" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Result -->
                <RowDefinition Height="*"/>
                <!-- Log -->
                <RowDefinition Height="Auto"/>
                <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Result 영역 -->
            <StackPanel Grid.Row="0" MinWidth="300" Margin="0,0,0,10">
                <TextBlock Text="Result"
                   Foreground="White"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>
                <DataGrid ItemsSource="{Binding ResultData}"
                  Background="White"
                  Foreground="Black"
                  AutoGenerateColumns="True"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch"
                  Height="200"/>
            </StackPanel>

            <!-- Log 영역 -->
            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                <TextBlock Text="Log"
                   Foreground="White"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>
                <ListBox ItemsSource="{Binding LogMessages}"
                 Background="White"
                 Foreground="Black"
                 VerticalAlignment="Stretch"
                 HorizontalAlignment="Stretch"
                 Height="200"/>
            </StackPanel>

            <!-- 버튼 영역 -->
            <Grid Grid.Row="2" Margin="5,10,5,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                Background="AliceBlue"
                Content="START"
                Command="{Binding StartCommand}"
                Foreground="Black"
                Height="40"
                Margin="5"
                HorizontalAlignment="Stretch"/>

                <Button Grid.Column="1"
                Background="AliceBlue"
                Content="STOP"
                Command="{Binding StopCommand}"
                Foreground="Black"
                Height="40"
                Margin="5"
                HorizontalAlignment="Stretch"/>
            </Grid>
        </Grid>

    </Grid>
</Page>