<Page
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PatternMatchingTool.View"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="PatternMatchingTool.View.SettingCameraPage" 
        xmlns:converters="clr-namespace:PatternMatchingTool.Converter"
        mc:Ignorable="d"
        Title="SettingCameraPage" Margin="10, 10, 10, 10"  Background="#FF111111"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

    <Page.Resources>
        <converters:BitmapSourceConverter x:Key="BitmapSourceConvert" />
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="40"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
                
            </Grid.RowDefinitions>

            <ComboBox ItemsSource="{Binding CameraList}"
                  SelectedIndex="{Binding SelectedCameraIndex, Mode=TwoWay}"
                      
                  Height="40"
                  Width="200"
                  HorizontalAlignment="Left"
                  BorderThickness="1"
                  BorderBrush="Gray"/>



            <Viewbox Grid.Row="1"
                     Stretch="Uniform"
                     ClipToBounds="True"
                     Grid.RowSpan="2">
                <Image Name="CameraImage"
                     Stretch="Uniform"
                     Source="{Binding DisplayBitmap, Converter={StaticResource BitmapSourceConvert}}"/>
            </Viewbox>
        </Grid>

        <Grid Grid.Column="1" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Stretch">
            <StackPanel Margin="10" HorizontalAlignment="Left" VerticalAlignment="Stretch" Orientation="Vertical" Width="auto">
                <DockPanel Margin="10">
                    <Button Content="SEARCH"
                    Command="{Binding SearchCameraCommand}"
                    Width="130"
                    Height="30"
                    Margin="10"/>
                </DockPanel>
                <DockPanel Margin="10">
                    <Button Content="OPEN CAMERA"
                    Command="{Binding OpenCameraCommand}"
                    Width="130"
                    Height="30"
                    Margin="10"/>
                    <Button Content="CLOSE CAMERA"
                    Command="{Binding CloseCameraCommand}"
                    Width="130"
                    Height="30"
                    Margin="10"/>
                </DockPanel>
                <DockPanel Margin="10">
                    <Button Content="START GRAB"
                    Command="{Binding StartGrabCommand}"
                    IsEnabled="{Binding IsCameraOpen}"
                    Width="130"
                    Height="30"
                    Margin="10"/>
                    <Button Content="STOP GRAB"
                    Command="{Binding StopGrabCommand}"
                    IsEnabled="{Binding IsCameraOpen}"
                    Width="130"
                    Height="30"
                    Margin="10"/>
                </DockPanel>
                <DockPanel Margin="10" LastChildFill="False">
                    <ui:ToggleSwitch 
                IsEnabled="{Binding IsCameraOpen}"
                Margin="10"
                Content="{Binding CameraMode}" 
                DockPanel.Dock="Left"
                Height="20" 
                Width="130"
                    Command=""
                IsChecked="{Binding IsTriggerMode, Mode=TwoWay}"/>

                    <Button Content="TRIGGER"
            Command="{Binding TriggerOnceCommand}"
                        IsEnabled="{Binding IsTriggerMode}"
            Width="130"
            Height="30"
            Margin="10"
            DockPanel.Dock="Left"/>
                </DockPanel>
                <DockPanel Margin="10">
                    <Label Content="EXPOSURE TIME" 
                       FontSize="12"
                       FontWeight="Bold"
                       VerticalContentAlignment="Center"
                       Width="130"
                       Margin="10"/>
                    <TextBox Text="{Binding ExposureTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        IsEnabled="{Binding IsCameraOpen}"
                         Margin="10"
                         Width="130"/>
                </DockPanel>
                <DockPanel Margin="10">
                    <Label Content="GAIN" 
                       FontSize="12"
                       FontWeight="Bold"
                       VerticalContentAlignment="Center"
                       Width="130"
                       Margin="10"/>
                    <TextBox Text="{Binding Gain, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        IsEnabled="{Binding IsCameraOpen}"
                         Margin="10"/>
                </DockPanel>
                <DockPanel Margin="10">
                    <Label Content="FRAME RATE" 
                       FontSize="12"
                       FontWeight="Bold"
                       VerticalContentAlignment="Center"
                       Width="130"
                       Margin="10"/>
                    <TextBox Text="{Binding FrameRate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        IsEnabled="{Binding IsCameraOpen}"
                         Margin="10"/>
                </DockPanel>
                <DockPanel Margin="10">
                    <Button Content="GET PARAM"
                    Command="{Binding GetParametersCommand}"
                    IsEnabled="{Binding IsCameraOpen}"
                    Width="130"
                    Height="30"
                    Margin="10"/>
                    <Button Content="SET PARAM"
                    Command="{Binding SetParametersCommand}"
                    IsEnabled="{Binding IsCameraOpen}"
                    Width="130"
                    Height="30"
                    Margin="10"/>
                </DockPanel>
                <DockPanel Margin="10" LastChildFill="False">
                    <Button Content="SAVE"
                    Command="{Binding SaveCameraParametersCommand}"
                    IsEnabled="{Binding IsCameraOpen}"
                    Width="130"
                    Height="30"
                    Margin="10"
                        DockPanel.Dock="Right"/>
                </DockPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
